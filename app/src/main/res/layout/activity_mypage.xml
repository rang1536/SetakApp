                                    android:src="@drawable/block_icon"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:text="회원 탈퇴"
                                    android:textSize="17dp"
                                    android:textStyle="bold" />

