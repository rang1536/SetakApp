                                    android:src="@drawable/next_btn" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/my_page_deleteBtn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/my_page_inquireBtn"
