<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">



    <ImageButton
        android:id="@+id/actionBackBtn"
        android:layout_width="35dp"
        android:layout_height="27dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:onClick="actionBackBtnClick"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/callback_btn" />

    <ImageButton
        android:id="@+id/actionLogoBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ac_logo" />

    <ImageButton
        android:id="@+id/actionMenuBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/cate_icon" />
</RelativeLayout>
